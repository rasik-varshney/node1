<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage:</title>
    <link rel="stylesheet" href="home.css">
  </head>
  <body>
    <h1>All user Records</h1>
    <div class="container">
      <% data.forEach(user=>{ %>
      <div class="single-user<%= user.isPromoted %>">
        <p>name : <%= user.name %></p>
        <p>email : <%= user.email %></p>
        <form method="POST" action="/users/<%= user._id %>?_method=PUT">
          <button id="edit-<%= user.name %>" type="submit">
            <% if(user.isPromoted){%> <%= 'Demote' %> <%} else{%> <%= 'promote'
            %> <% }%>
          </button>
        </form>
        <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
          <button id="delete-<%= user.name %>">delete</button>
        </form>
      </div>
      <%})%>
    </div>
    <a href="/form">Add new user</a>
  </body>
</html>